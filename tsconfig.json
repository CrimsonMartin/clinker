{
  "compilerOptions": {
    "target": "es2020",
    "module": "none",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "classic",
    "noEmitOnError": false,
    "types": ["chrome", "firefox-webext-browser", "jest", "node"]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}
