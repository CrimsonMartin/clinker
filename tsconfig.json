{
  "compilerOptions": {
    "target": "es2020",
    "module": "none",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["chrome", "firefox-webext-browser", "jest", "node"]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "components/treeContainer.ts",
    "components/treeNode.ts",
    "services/treeService.ts",
    "services/treeValidationService.ts"
  ]
}
